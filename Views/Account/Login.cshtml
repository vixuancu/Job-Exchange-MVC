@model JobExchangeMvc.DTOs.LoginDto

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">
                    <i class="fas fa-sign-in-alt text-primary"></i> Đăng nhập
                </h2>

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock"></i> Mật khẩu
                        </label>
                        <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Ghi nhớ đăng nhập
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Đăng nhập
                        </button>
                    </div>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <p class="mb-0">Chưa có tài khoản?
                        <a asp-action="Register" class="text-decoration-none">
                            <i class="fas fa-user-plus"></i> Đăng ký ngay
                        </a>
                    </p>
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <div class="alert alert-info" role="alert">
                <h6><i class="fas fa-info-circle"></i> Tài khoản demo</h6>
                <small>
                    <strong>Admin:</strong> admin@jobexchange.com / Admin@123<br>
                    <strong>Nhà tuyển dụng:</strong> employer1@company.com / Employer@123<br>
                    <strong>Ứng viên:</strong> applicant1@example.com / Applicant@123
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}