<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sàn Giao Dịch Việc Làm</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JobExchangeMvc.styles.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-briefcase text-primary"></i> <strong>Sàn GD Việc Làm</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Jobs" asp-action="Index">
                                <i class="fas fa-search"></i> Tìm việc
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Employer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Jobs" asp-action="Create">
                                        <i class="fas fa-plus"></i> Đăng tin
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Jobs" asp-action="MyJobs">
                                        <i class="fas fa-briefcase"></i> Tin của tôi
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Applicant"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Applications" asp-action="MyApplications">
                                        <i class="fas fa-file-alt"></i> Đơn ứng tuyển
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt"></i> Quản trị
                                    </a>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle"></i> Giới thiệu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope"></i> Liên hệ
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button"
                                    data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user"></i> Hồ sơ
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2" asp-controller="Account"
                                    asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Đăng ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div class="@(ViewData["ContainerClass"] ?? "container")">
            @RenderBody()
        </div>
    </main>

    <footer class="footer py-4 bg-light border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h6><i class="fas fa-briefcase text-primary"></i> Sàn GD Việc Làm</h6>
                    <p class="text-muted small">Nền tảng kết nối nhà tuyển dụng và ứng viên</p>
                </div>
                <div class="col-md-4">
                    <h6>Liên kết</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-controller="Home" asp-action="About" class="text-muted text-decoration-none">Giới
                                thiệu</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-muted text-decoration-none">Liên
                                hệ</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none">Chính
                                sách bảo mật</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Theo dõi</h6>
                    <div class="d-flex gap-2">
                        <a href="#" class="text-muted"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
            <hr />
            <div class="text-center">
                <small class="text-muted">&copy; 2025 Sàn Giao Dịch Việc Làm</small>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>