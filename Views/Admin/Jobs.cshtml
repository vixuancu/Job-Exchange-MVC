@model IEnumerable<JobExchangeMvc.DTOs.JobDto>

@{
    ViewData["Title"] = "Quản lý tin tuyển dụng";
    var pagedResult = ViewBag.PagedResult as JobExchangeMvc.DTOs.PagedResultDto<JobExchangeMvc.DTOs.JobDto>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-briefcase"></i> Quản lý tin tuyển dụng</h2>
    </div>

    <!-- Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Jobs" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">Tất cả</option>
                        <option value="Pending" selected="@(ViewBag.SelectedStatus == "Pending")">Chờ duyệt</option>
                        <option value="Approved" selected="@(ViewBag.SelectedStatus == "Approved")">Đã duyệt</option>
                        <option value="Rejected" selected="@(ViewBag.SelectedStatus == "Rejected")">Từ chối</option>
                        <option value="Closed" selected="@(ViewBag.SelectedStatus == "Closed")">Đã đóng</option>
                    </select>
                </div>
            </form>
        </div>
    </div>

    <!-- Jobs Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tiêu đề</th>
                            <th>Công ty</th>
                            <th>Danh mục</th>
                            <th>Vị trí</th>
                            <th>Lương</th>
                            <th>Hạn nộp</th>
                            <th>Trạng thái</th>
                            <th>Lượt xem</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var job in Model)
                        {
                            <tr>
                                <td>@job.Id</td>
                                <td>
                                    <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" target="_blank">
                                        @job.Title
                                    </a>
                                </td>
                                <td>@job.CompanyName</td>
                                <td><span class="badge bg-info">@job.CategoryName</span></td>
                                <td><i class="fas fa-map-marker-alt"></i> @job.Location</td>
                                <td>@job.SalaryRange</td>
                                <td>@job.ApplicationDeadline?.ToShortDateString()</td>
                                <td>
                                    @if (job.Status == "Pending")
                                    {
                                        <span class="badge bg-warning">Chờ duyệt</span>
                                    }
                                    else if (job.Status == "Approved")
                                    {
                                        <span class="badge bg-success">Đã duyệt</span>
                                    }
                                    else if (job.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">Từ chối</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Đã đóng</span>
                                    }
                                </td>
                                <td><i class="fas fa-eye"></i> @job.ViewCount</td>
                                <td>
                                    @if (job.Status == "Pending")
                                    {
                                        <form asp-action="ApproveJob" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="jobId" value="@job.Id" />
                                            <button type="submit" class="btn btn-success btn-sm" 
                                                    onclick="return confirm('Xác nhận duyệt tin này?')">
                                                <i class="fas fa-check"></i> Duyệt
                                            </button>
                                        </form>
                                        <form asp-action="RejectJob" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="jobId" value="@job.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Xác nhận từ chối tin này?')">
                                                <i class="fas fa-times"></i> Từ chối
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Không có tin tuyển dụng nào</p>
                </div>
            }
        </div>
    </div>

    <!-- ✅ Pagination Controls -->
    @if (pagedResult != null && pagedResult.TotalPages > 1)
    {
        <div class="mt-4">
            @await Html.PartialAsync("_PaginationPartial", pagedResult)
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto reload on status change
        document.querySelector('select[name="status"]').addEventListener('change', function() {
            this.form.submit();
        });
    </script>
}
