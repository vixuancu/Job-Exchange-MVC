@model IEnumerable<JobExchangeMvc.DTOs.JobDto>

@{
    ViewData["Title"] = "Quản lý tin tuyển dụng";
    var pagedResult = ViewBag.PagedResult as JobExchangeMvc.DTOs.PagedResultDto<JobExchangeMvc.DTOs.JobDto>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-briefcase"></i> Quản lý tin tuyển dụng</h2>

        <!-- ✅ FIX #2: Button trigger batch expire with AJAX -->
        <button type="button" class="btn btn-warning" onclick="expireJobs()">
            <i class="fas fa-clock"></i> Đóng tin quá hạn
        </button>
    </div>

    <!-- Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Jobs" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">Tất cả</option>
                        <option value="Pending" selected="@(ViewBag.SelectedStatus == "Pending")">Chờ duyệt</option>
                        <option value="Approved" selected="@(ViewBag.SelectedStatus == "Approved")">Đã duyệt</option>
                        <option value="Rejected" selected="@(ViewBag.SelectedStatus == "Rejected")">Từ chối</option>
                        <option value="Closed" selected="@(ViewBag.SelectedStatus == "Closed")">Đã đóng</option>
                    </select>
                </div>
                <div class="col-md-9">
                    @if (pagedResult != null)
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle"></i>
                            Tìm thấy <strong>@pagedResult.TotalItems</strong> tin tuyển dụng
                            (Trang <strong>@pagedResult.CurrentPage</strong>/<strong>@pagedResult.TotalPages</strong>)
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>

    <!-- Jobs Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tiêu đề</th>
                            <th>Công ty</th>
                            <th>Danh mục</th>
                            <th>Vị trí</th>
                            <th>Lương</th>
                            <th>Hạn nộp</th>
                            <th>Trạng thái</th>
                            <th>Lượt xem</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var job in Model)
                        {
                            <tr>
                                <td>@job.Id</td>
                                <td>
                                    <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" target="_blank">
                                        @job.Title
                                    </a>
                                </td>
                                <td>@job.CompanyName</td>
                                <td><span class="badge bg-info">@job.CategoryName</span></td>
                                <td><i class="fas fa-map-marker-alt"></i> @job.Location</td>
                                <td>@job.SalaryRange</td>
                                <td>@job.ApplicationDeadline?.ToShortDateString()</td>
                                <td>
                                    @if (job.Status == "Pending")
                                    {
                                        <span class="badge bg-warning">Chờ duyệt</span>
                                    }
                                    else if (job.Status == "Approved")
                                    {
                                        <span class="badge bg-success">Đã duyệt</span>
                                    }
                                    else if (job.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">Từ chối</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Đã đóng</span>
                                    }
                                </td>
                                <td><i class="fas fa-eye"></i> @job.ViewCount</td>
                                <td>
                                    @if (job.Status == "Pending")
                                    {
                                        <button type="button" class="btn btn-success btn-sm"
                                            onclick="approveJob(@job.Id, '@job.Title')">
                                            <i class="fas fa-check"></i> Duyệt
                                        </button>
                                        <button type="button" class="btn btn-danger btn-sm"
                                            onclick="rejectJob(@job.Id, '@job.Title')">
                                            <i class="fas fa-times"></i> Từ chối
                                        </button>
                                    }

                                    <!-- ✅ Hard Delete Button -->
                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                        onclick="hardDeleteJob(@job.Id, '@job.Title')">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Không có tin tuyển dụng nào</p>
                </div>
            }
        </div>
    </div>

    <!-- ✅ Pagination Controls -->
    @if (pagedResult != null)
    {
        <div class="mt-4">
            @if (pagedResult.TotalPages > 1)
            {
                @await Html.PartialAsync("_PaginationPartial", pagedResult)
            }
            else
            {
                <div class="text-center text-muted">
                    <small>
                        Hiển thị tất cả <strong>@pagedResult.TotalItems</strong> kết quả
                    </small>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script>
        // Auto reload on status change
        document.querySelector('select[name="status"]').addEventListener('change', function () {
            this.form.submit();
        });

        function expireJobs() {
            if (!confirm('Tự động đóng tất cả tin tuyển dụng quá hạn?')) {
                return;
            }

            var button = event.target;
            var originalHtml = button.innerHTML;
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang xử lý...';

            $.ajax({
                url: '@Url.Action("ExpireJobs", "Admin")',
                type: 'POST',
                data: {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        if (response.count > 0) {
                            location.reload();
                        } else {
                            button.disabled = false;
                            button.innerHTML = originalHtml;
                        }
                    } else {
                        alert('Lỗi: ' + response.message);
                        button.disabled = false;
                        button.innerHTML = originalHtml;
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra khi đóng tin tuyển dụng quá hạn!');
                    button.disabled = false;
                    button.innerHTML = originalHtml;
                }
            });
        }

        function approveJob(jobId, jobTitle) {
            if (!confirm('Bạn có chắc muốn duyệt công việc: ' + jobTitle + '?')) {
                return;
            }

            var button = event.target;
            button.disabled = true;
            button.textContent = 'Đang xử lý...';

            $.ajax({
                url: '@Url.Action("ApproveJob", "Admin")',
                type: 'POST',
                data: {
                    id: jobId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        alert('Duyệt công việc thành công!');
                        location.reload();
                    } else {
                        alert('Lỗi: ' + response.message);
                        button.disabled = false;
                        button.textContent = 'Duyệt';
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra khi duyệt công việc!');
                    button.disabled = false;
                    button.textContent = 'Duyệt';
                }
            });
        }

        function rejectJob(jobId, jobTitle) {
            if (!confirm('Bạn có chắc muốn từ chối công việc: ' + jobTitle + '?')) {
                return;
            }

            var button = event.target;
            button.disabled = true;
            button.textContent = 'Đang xử lý...';

            $.ajax({
                url: '@Url.Action("RejectJob", "Admin")',
                type: 'POST',
                data: {
                    id: jobId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        alert('Từ chối công việc thành công!');
                        location.reload();
                    } else {
                        alert('Lỗi: ' + response.message);
                        button.disabled = false;
                        button.textContent = 'Từ chối';
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra khi từ chối công việc!');
                    button.disabled = false;
                    button.textContent = 'Từ chối';
                }
            });
        }

        function hardDeleteJob(jobId, jobTitle) {
            if (!confirm('⚠️ CẢNH BÁO: Xóa vĩnh viễn công việc: ' + jobTitle + '?\n\nHành động này KHÔNG THỂ KHÔI PHỤC!')) {
                return;
            }

            var button = event.target;
            button.disabled = true;
            button.textContent = 'Đang xóa...';

            $.ajax({
                url: '@Url.Action("HardDeleteJob", "Admin")',
                type: 'POST',
                data: {
                    id: jobId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        alert('Xóa công việc thành công!');
                        location.reload();
                    } else {
                        alert('Lỗi: ' + response.message);
                        button.disabled = false;
                        button.textContent = 'Xóa';
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra khi xóa công việc!');
                    button.disabled = false;
                    button.textContent = 'Xóa';
                }
            });
        }
    </script>
}