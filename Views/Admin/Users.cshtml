@model IEnumerable<JobExchangeMvc.DTOs.ProfileDto>

@{
    ViewData["Title"] = "Quản lý người dùng";
    var pagedResult = ViewBag.PagedResult as JobExchangeMvc.DTOs.PagedResultDto<JobExchangeMvc.DTOs.ProfileDto>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users"></i> Quản lý người dùng</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Vai trò</label>
                    <select name="role" class="form-select" onchange="this.form.submit()">
                        <option value="">Tất cả</option>
                        <option value="Admin" selected="@(ViewBag.SelectedRole == "Admin")">Admin</option>
                        <option value="Employer" selected="@(ViewBag.SelectedRole == "Employer")">Nhà tuyển dụng
                        </option>
                        <option value="Applicant" selected="@(ViewBag.SelectedRole == "Applicant")">Ứng viên</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">Tất cả</option>
                        <option value="active" selected="@(ViewBag.SelectedStatus == "active")">Đang hoạt động</option>
                        <option value="inactive" selected="@(ViewBag.SelectedStatus == "inactive")">Đã khóa</option>
                    </select>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Vai trò</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(user.AvatarUrl))
                                        {
                                            <img src="@user.AvatarUrl" alt="Avatar" class="rounded-circle me-2" width="32"
                                                height="32">
                                        }
                                        else
                                        {
                                            <i class="fas fa-user-circle fa-2x me-2 text-muted"></i>
                                        }
                                        <span>@user.FullName</span>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @switch (user.Role)
                                    {
                                        case "Admin":
                                            <span class="badge bg-danger">Admin</span>
                                            break;
                                        case "Employer":
                                            <span class="badge bg-primary">Nhà tuyển dụng</span>
                                            break;
                                        case "Applicant":
                                            <span class="badge bg-success">Ứng viên</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@user.Role</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Đã khóa</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToShortDateString()</td>
                                <td>
                                    @if (user.Role != "Admin")
                                    {
                                        @if (user.IsActive)
                                        {
                                            <form asp-action="UpdateUserStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <input type="hidden" name="isActive" value="false" />
                                                <button type="submit" class="btn btn-warning btn-sm"
                                                    onclick="return confirm('Xác nhận khóa tài khoản này?')">
                                                    <i class="fas fa-lock"></i> Khóa
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="UpdateUserStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <input type="hidden" name="isActive" value="true" />
                                                <button type="submit" class="btn btn-success btn-sm"
                                                    onclick="return confirm('Xác nhận mở khóa tài khoản này?')">
                                                    <i class="fas fa-unlock"></i> Mở khóa
                                                </button>
                                            </form>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Không có người dùng nào</p>
                </div>
            }
        </div>
    </div>

    <!-- ✅ Pagination Controls -->
    @if (pagedResult != null && pagedResult.TotalPages > 1)
    {
        <div class="mt-4">
            @await Html.PartialAsync("_PaginationPartial", pagedResult)
        </div>
    }
</div>