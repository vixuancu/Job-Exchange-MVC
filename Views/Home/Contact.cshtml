@{
    ViewData["Title"] = "Liên hệ";
}

<div class="row">
    <div class="col-md-6">
        <h2 class="mb-4">Liên hệ với chúng tôi</h2>
        
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Họ và tên</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số điện thoại</label>
                        <input type="tel" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nội dung</label>
                        <textarea class="form-control" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Gửi tin nhắn
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <h2 class="mb-4">Thông tin liên hệ</h2>
        
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="mb-4">
                    <h5><i class="fas fa-map-marker-alt text-primary"></i> Địa chỉ</h5>
                    <p class="ms-4">Hà Nội, Việt Nam</p>
                </div>
                
                <div class="mb-4">
                    <h5><i class="fas fa-phone text-success"></i> Điện thoại</h5>
                    <p class="ms-4">+84 123 456 789</p>
                </div>
                
                <div class="mb-4">
                    <h5><i class="fas fa-envelope text-danger"></i> Email</h5>
                    <p class="ms-4">info@jobexchange.com</p>
                </div>
                
                <div>
                    <h5><i class="fas fa-clock text-warning"></i> Giờ làm việc</h5>
                    <p class="ms-4">Thứ 2 - Thứ 6: 8:00 - 17:00<br>Thứ 7: 8:00 - 12:00</p>
                </div>
            </div>
        </div>
    </div>
</div>
