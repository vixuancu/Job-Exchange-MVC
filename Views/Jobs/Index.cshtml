@model IEnumerable<JobExchangeMvc.DTOs.JobDto>

@{
    ViewData["Title"] = "Tìm việc làm";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2><i class="fas fa-search"></i> Tìm kiếm việc làm</h2>
        <p class="text-muted">Khám phá hàng nghìn cơ hội việc làm hấp dẫn</p>
    </div>
</div>

<!-- Search Form -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" id="searchForm">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="fas fa-search"></i> Từ khóa
                    </label>
                    <input type="text" name="searchTerm" class="form-control"
                        placeholder="Tìm kiếm theo tiêu đề, kỹ năng..." value="@ViewBag.SearchTerm">
                </div>

                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-map-marker-alt"></i> Địa điểm
                    </label>
                    <input type="text" name="location" class="form-control" placeholder="Hà Nội, TP.HCM..."
                        value="@ViewBag.Location">
                </div>

                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-th-large"></i> Ngành nghề
                    </label>
                    <select name="categoryId" class="form-select">
                        <option value="">Tất cả ngành nghề</option>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var item in ViewBag.Categories)
                            {
                                <option value="@item.Value" selected="@(ViewBag.CategoryId?.ToString() == item.Value)">
                                    @item.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Results -->
<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 id="resultsCount">
                @if (Model.Any())
                {
                    <span>Tìm thấy <strong>@Model.Count()</strong> việc làm</span>
                }
                else
                {
                    <span>Không tìm thấy việc làm phù hợp</span>
                }
            </h5>

            @if (User.IsInRole("Employer"))
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Đăng tin tuyển dụng
                </a>
            }
        </div>

        <div id="jobsList">
            @await Html.PartialAsync("_JobListPartial", Model)
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let searchTimeout;

            // Prevent form submission, use AJAX instead
            $('#searchForm').on('submit', function (e) {
                e.preventDefault();
                performSearch();
            });

            // AJAX search on input change with debounce
            $('#searchForm input, #searchForm select').on('change keyup', function () {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(function () {
                    performSearch();
                }, 800); // 800ms debounce for better UX
            });

            function performSearch() {
                // Show loading state
                $('#jobsList').html('<div class="text-center py-5"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Đang tìm kiếm...</span></div></div>');

                const searchTerm = $('input[name="searchTerm"]').val();
                const location = $('input[name="location"]').val();
                const categoryId = $('select[name="categoryId"]').val();

                $.ajax({
                    url: '@Url.Action("SearchPartial", "Jobs")',
                    type: 'GET',
                    data: {
                        searchTerm: searchTerm,
                        location: location,
                        categoryId: categoryId
                    },
                    success: function (data) {
                        $('#jobsList').html(data);

                        // Update result count
                        const jobCount = $('#jobsList .job-card').length;
                        if (jobCount > 0) {
                            $('#resultsCount').html('<span>Tìm thấy <strong>' + jobCount + '</strong> việc làm</span>');
                        } else {
                            $('#resultsCount').html('<span>Không tìm thấy việc làm phù hợp</span>');
                        }

                        // Update URL without page reload
                        const params = new URLSearchParams();
                        if (searchTerm) params.set('searchTerm', searchTerm);
                        if (location) params.set('location', location);
                        if (categoryId) params.set('categoryId', categoryId);

                        const newUrl = params.toString()
                            ? window.location.pathname + '?' + params.toString()
                            : window.location.pathname;

                        window.history.pushState({}, '', newUrl);
                    },
                    error: function () {
                        $('#jobsList').html('<div class="alert alert-danger">Có lỗi xảy ra khi tìm kiếm. Vui lòng thử lại!</div>');
                    }
                });
            }
        });
    </script>
}

<style>
    .job-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .job-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15) !important;
    }

    .company-logo {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        padding: 10px;
    }
</style>