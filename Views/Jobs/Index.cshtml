@model IEnumerable<JobExchangeMvc.DTOs.JobDto>

@{
    ViewData["Title"] = "Tìm việc làm";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2><i class="fas fa-search"></i> Tìm kiếm việc làm</h2>
        <p class="text-muted">Khám phá hàng nghìn cơ hội việc làm hấp dẫn</p>
    </div>
</div>

<!-- Search Form -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" id="searchForm">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="fas fa-search"></i> Từ khóa
                    </label>
                    <input type="text" name="searchTerm" class="form-control"
                        placeholder="Tìm kiếm theo tiêu đề, kỹ năng..." value="@ViewBag.SearchTerm">
                </div>

                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-map-marker-alt"></i> Địa điểm
                    </label>
                    <input type="text" name="location" class="form-control" placeholder="Hà Nội, TP.HCM..."
                        value="@ViewBag.Location">
                </div>

                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-th-large"></i> Ngành nghề
                    </label>
                    <select name="categoryId" class="form-select">
                        <option value="">Tất cả ngành nghề</option>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var item in ViewBag.Categories)
                            {
                                <option value="@item.Value" selected="@(ViewBag.CategoryId?.ToString() == item.Value)">
                                    @item.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Results -->
<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 id="resultsCount">
                @{
                    var pagedResult = ViewBag.PagedResult as JobExchangeMvc.DTOs.PagedResultDto<JobExchangeMvc.DTOs.JobDto>;
                }
                @if (pagedResult != null && pagedResult.TotalItems > 0)
                {
                    <span>Tìm thấy <strong>@pagedResult.TotalItems</strong> việc làm</span>
                }
                else if (Model.Any())
                {
                    <span>Tìm thấy <strong>@Model.Count()</strong> việc làm</span>
                }
                else
                {
                    <span>Không tìm thấy việc làm phù hợp</span>
                }
            </h5>

            @if (User.IsInRole("Employer"))
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Đăng tin tuyển dụng
                </a>
            }
        </div>

        <div id="jobsList">
            @await Html.PartialAsync("_JobListPartial", Model)
        </div>

        <!-- ✅ Pagination Controls -->
        @if (pagedResult != null && pagedResult.TotalPages > 1)
        {
            <div class="mt-4">
                @await Html.PartialAsync("_PaginationPartial", pagedResult)
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // ✅ DISABLED AJAX - Dùng normal form submission để pagination hoạt động
        // AJAX search can break pagination, so we use standard form submission
        
        // Optional: Auto-submit on select change
        $(document).ready(function () {
            $('select[name="categoryId"]').on('change', function () {
                $('#searchForm').submit();
            });
        });
    </script>
}

<style>
    .job-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .job-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15) !important;
    }

    .company-logo {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        padding: 10px;
    }
</style>