@model IEnumerable<JobExchangeMvc.DTOs.JobDto>

@{
    ViewData["Title"] = "Quản lý tin tuyển dụng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building"></i> Tin tuyển dụng của tôi</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Đăng tin mới
    </a>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <h3 class="text-primary">@Model.Count()</h3>
                <p class="mb-0">Tổng tin đăng</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <h3 class="text-success">@Model.Count(j => j.Status == "Approved")</h3>
                <p class="mb-0">Đã duyệt</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <h3 class="text-warning">@Model.Count(j => j.Status == "Pending")</h3>
                <p class="mb-0">Chờ duyệt</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-danger">
            <div class="card-body text-center">
                <h3 class="text-danger">@Model.Count(j => j.Status == "Rejected")</h3>
                <p class="mb-0">Bị từ chối</p>
            </div>
        </div>
    </div>
</div>

<!-- Jobs List -->
@if (Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Ngành nghề</th>
                            <th>Địa điểm</th>
                            <th>Trạng thái</th>
                            <th>Lượt xem</th>
                            <th>Ứng viên</th>
                            <th>Ngày đăng</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var job in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@job.Id" class="text-decoration-none">
                                        <strong>@job.Title</strong>
                                    </a>
                                </td>
                                <td>@job.CategoryName</td>
                                <td>
                                    <i class="fas fa-map-marker-alt"></i> @job.Location
                                </td>
                                <td>
                                    @switch (job.Status)
                                    {
                                        case "Approved":
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Đã duyệt
                                            </span>
                                            break;
                                        case "Pending":
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> Chờ duyệt
                                            </span>
                                            break;
                                        case "Rejected":
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle"></i> Từ chối
                                            </span>
                                            break;
                                        case "Closed":
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-ban"></i> Đã đóng
                                            </span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <i class="far fa-eye"></i> @job.ViewCount
                                </td>
                                <td>
                                    <a asp-action="Applicants" asp-route-id="@job.Id" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-users"></i> @job.ApplicationsCount
                                    </a>
                                </td>
                                <td>@job.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-sm btn-primary" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Applicants" asp-route-id="@job.Id" class="btn btn-sm btn-info" title="Xem ứng viên">
                                            <i class="fas fa-users"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteJob(@job.Id)" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center" role="alert">
        <i class="fas fa-info-circle fa-3x mb-3"></i>
        <h5>Bạn chưa đăng tin tuyển dụng nào</h5>
        <p>Bắt đầu tìm kiếm nhân tài bằng cách đăng tin tuyển dụng ngay!</p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Đăng tin đầu tiên
        </a>
    </div>
}

@section Scripts {
    @Html.AntiForgeryToken()
    <script>
        function deleteJob(jobId) {
            if (confirm('Bạn có chắc chắn muốn xóa tin tuyển dụng này? Hành động này không thể hoàn tác!')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Jobs")',
                    type: 'POST',
                    data: {
                        id: jobId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message || 'Có lỗi xảy ra. Vui lòng thử lại!');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('AJAX Error:', error);
                        alert('Có lỗi xảy ra khi gọi server. Vui lòng thử lại!');
                    }
                });
            }
        }
    </script>
}
