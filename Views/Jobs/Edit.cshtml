@model JobExchangeMvc.DTOs.JobDto

@{
    ViewData["Title"] = "Chỉnh sửa tin tuyển dụng";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="fas fa-edit"></i> Chỉnh sửa tin tuyển dụng
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">
                                    <i class="fas fa-briefcase"></i> Tiêu đề công việc <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Title" class="form-control" placeholder="Vd: Senior PHP Developer" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">
                                    <i class="fas fa-tags"></i> Ngành nghề <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">-- Chọn ngành nghề --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-align-left"></i> Mô tả công việc <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="6" 
                                  placeholder="Mô tả chi tiết về công việc, vai trò và trách nhiệm..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Requirements" class="form-label">
                            <i class="fas fa-clipboard-list"></i> Yêu cầu ứng viên
                        </label>
                        <textarea asp-for="Requirements" class="form-control" rows="5"
                                  placeholder="Kỹ năng, kinh nghiệm, bằng cấp yêu cầu..."></textarea>
                        <span asp-validation-for="Requirements" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Benefits" class="form-label">
                            <i class="fas fa-gift"></i> Quyền lợi
                        </label>
                        <textarea asp-for="Benefits" class="form-control" rows="4"
                                  placeholder="Lương thưởng, bảo hiểm, chế độ nghỉ phép..."></textarea>
                        <span asp-validation-for="Benefits" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="SalaryRange" class="form-label">
                                    <i class="fas fa-dollar-sign"></i> Mức lương
                                </label>
                                <input asp-for="SalaryRange" class="form-control" 
                                       placeholder="Vd: 15-20 triệu" />
                                <span asp-validation-for="SalaryRange" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Location" class="form-label">
                                    <i class="fas fa-map-marker-alt"></i> Địa điểm làm việc
                                </label>
                                <input asp-for="Location" class="form-control" 
                                       placeholder="Vd: Hà Nội" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="JobType" class="form-label">
                                    <i class="fas fa-clock"></i> Loại hình công việc
                                </label>
                                <select asp-for="JobType" class="form-select">
                                    <option value="">-- Chọn loại hình --</option>
                                    <option value="Full-time">Full-time</option>
                                    <option value="Part-time">Part-time</option>
                                    <option value="Remote">Remote</option>
                                    <option value="Freelance">Freelance</option>
                                    <option value="Intern">Intern</option>
                                </select>
                                <span asp-validation-for="JobType" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NumberOfPositions" class="form-label">
                                    <i class="fas fa-users"></i> Số lượng tuyển
                                </label>
                                <input asp-for="NumberOfPositions" type="number" class="form-control" 
                                       placeholder="Vd: 2" min="1" />
                                <span asp-validation-for="NumberOfPositions" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ApplicationDeadline" class="form-label">
                                    <i class="fas fa-calendar-alt"></i> Hạn nộp hồ sơ
                                </label>
                                <input asp-for="ApplicationDeadline" type="date" class="form-control" />
                                <span asp-validation-for="ApplicationDeadline" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="MyJobs" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
